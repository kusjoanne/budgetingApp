<%- include("partials/header") %>

  <link href="css/signin.css" rel="stylesheet">

  <body class="text-center">
    <form class="form-signin" href="/initialsetup" method="post">
      <img class="mb-4" src="https://image.flaticon.com/icons/svg/2488/2488980.svg" alt="" width="125" height="125">
      <h1 class="h3 mb-3 font-weight-normal">Enter Starting Balance:</h1>

      <label for="inputBalance" class="sr-only">Balance</label>
      <input type="text" name="inputBalance" class="form-control" placeholder="Current Balance" required autofocus>
      <br>
      <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
    </form>
  </body>
</html>
