<%- include("partials/header") %>

  <link href="css/signin.css" rel="stylesheet">

  <body class="text-center">
    <form class="form-signin" href="/login" method="post">
      <img class="mb-4" src="https://image.flaticon.com/icons/svg/2488/2488980.svg" alt="" width="125" height="125">
      <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>

      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" name="username" class="form-control" placeholder="Email address" required autofocus>
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" name="password" class="form-control" placeholder="Password" required>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
    </form>
  </body>
</html>
